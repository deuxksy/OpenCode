{
  "$schema": "https://opencode.ai/config.json",
  "model": "zai-coding-plan/glm-4.7",
  "theme": "opencode",
  "default_agent": "plan",
  "tui": {
    "scroll_speed": 3,
    "diff_style": "auto"
  },
  "formatter": {
    "black": {
      "command": ["black", "--quiet", "$FILE"],
      "extensions": [".py"]
    },
    "isort": {
      "command": ["isort", "$FILE"],
      "extensions": [".py"]
    }
  },
  "instructions": ["AGENTS.md"],
  "watcher": {
    "ignore": ["__pycache__/**", "*.pyc", ".pytest_cache/**", ".venv/**"]
  },
  "provider": {
    "zai-coding-plan": {
      "options": {
        "timeout": 600000,
        "setCacheKey": true
      }
    }
  }
}
